<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_action"
        style="@style/text_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_lemon_state"
        style="@style/image_style"
        android:contentDescription="@string/lemon_image"
        app:layout_constraintEnd_toEndOf="@+id/text_action"
        app:layout_constraintStart_toStartOf="@+id/text_action"
        app:layout_constraintTop_toBottomOf="@+id/text_action" />

</androidx.constraintlayout.widget.ConstraintLayout>